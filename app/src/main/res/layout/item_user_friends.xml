<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="magic.cn.health.bean.User"/>
        <variable
            name="presenter"
            type="magic.cn.health.model.StartModel"/>
    </data>
    <!--林思旭 2016.4.8 -->
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->presenter.jumpToChatActivity(user)}">
        <TextView
            android:id="@+id/tv_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paddingColor"
            android:padding="2dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/imageUnSelectColor"/>
        <ImageView
            android:id="@+id/img_friend_avatar"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/border_padding"
            style="@style/SearCh_Item"
            android:src="@drawable/icon_head_boy"
            android:layout_below="@id/tv_alpha"
            app:imageUrl="@{user.getAvatar}"/>

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@{user.getNick}"
            android:textSize="@dimen/TextDescription"
            android:paddingTop="@dimen/between_control_padding"
            android:layout_alignTop="@+id/img_friend_avatar"
            android:layout_toRightOf="@+id/img_friend_avatar"
            android:layout_toEndOf="@+id/img_friend_avatar"
            android:hint="@string/add_friends"/>

        <TextView
            android:id="@+id/tv_friend_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="我想说我想说我想说我想说我想说我想说"
            android:textSize="@dimen/remindOfTextSize"
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@id/tv_friend_name"
            android:layout_toRightOf="@+id/img_friend_avatar"
            android:textStyle="italic"
            android:text="@{user.getSignature}"
            android:textColor="@color/base_color_text_gray"/>
        <View
            android:layout_below="@id/img_friend_avatar"
            android:paddingTop="@dimen/between_control_padding"
            style="@style/PaddingView"/>
    </RelativeLayout>
</layout>
