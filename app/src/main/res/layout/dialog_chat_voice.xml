<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#00000000">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="#C0C0C0">
            <ImageView
                android:id="@+id/dialog_voice_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/border_padding"/>
            <TextView
                android:id="@+id/tv_voice_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/titleOfTextSize"
                android:hint="@string/voice_short_tips"
                android:layout_below="@id/dialog_voice_cancel"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/dialog_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_icon_voice1"
                android:layout_marginBottom="@dimen/between_control_padding"
                android:layout_below="@id/tv_voice_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/between_control_padding"/>
            <TextView
                android:id="@+id/dialog_voice_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/titleOfTextSize"
                android:text="@string/record"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_login_selector"
                android:padding="@dimen/between_control_padding"
                android:layout_marginBottom="@dimen/border_padding"/>

        </RelativeLayout>
    </LinearLayout>
</layout>

