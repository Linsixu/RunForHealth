<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="conversation"
            type="magic.cn.health.bean.Conversation"/>
        <variable
            name="presenter"
            type="magic.cn.health.model.StartModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:onClick="@{()->presenter.jumpToChatActivity(conversation)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="65dp"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">
            <LinearLayout
                android:id="@+id/layout_user_avatar"
                style="@style/ConversationImgSize"
                android:background="@color/user_icon_color"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_recent_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_head_boy"
                    app:imageUrl="@{conversation.getAvatar}"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_recent_name"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="58.0dip"
                android:layout_toRightOf="@id/layout_user_avatar"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:elevation="2dp"
                android:textSize="@dimen/titleOfTextSize"
                android:textColor="@color/black"
                android:text="@{conversation.getcName}"/>

            <TextView
                android:id="@+id/tv_recent_msg"
                android:layout_width="fill_parent"
                android:layout_height="35.0dip"
                android:layout_below="@id/tv_recent_name"
                android:layout_toRightOf="@id/layout_user_avatar"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="35.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/base_color_text_gray"
                android:textSize="@dimen/TextDescription"
                android:text="@{conversation.getLastMessageContent}"/>

            <TextView
                android:id="@+id/tv_recent_time"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_above="@id/tv_recent_msg"
                android:layout_alignParentRight="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="0.0dip"
                android:singleLine="true"
                android:textColor="@color/base_color_text_gray"
                android:textSize="@dimen/remindOfTextSize"
                app:data="@{conversation.getLastMessageTime}"/>

            <TextView
                android:id="@+id/tv_recent_unread"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/recent_new_message"
                android:textColor="#ffffffff"
                android:elevation="1dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="@dimen/remindOfTextSize"
                app:setUnRead="@{conversation}"/>
        </RelativeLayout>

        <View
            style="@style/PaddingView"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</layout>
